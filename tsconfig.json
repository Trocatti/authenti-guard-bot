{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "compilerOptions": {
      "module": "ESNext"
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "../**/*",
    ".."
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}